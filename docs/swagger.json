                    }
                ],
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": ""
                    }
                }
            }
        },
        "/api/icg/weightConfig": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Istio Resouce Config"
                ],
                "summary": "defines weight policies that apply to traffic intended for a service after routing has occurred.",
                "parameters": [
                    {
                        "description": "new weights config",
                        "name": "data",
                        "in": "body",
